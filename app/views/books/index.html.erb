<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
    <tbody>
        <tr>
            <td>name</td>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
        </tr>
    </tbody>
</table>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  
  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>


<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td></td>　<!-- 未実装　-->
        <td>
          <%= link_to book_path(book) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>