<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
    <tbody>
        <tr>
            <td>name</td>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
        </tr>
    </tbody>
</table>
<%= link_to "edit", edit_user_path(@user) %>

<%= render "new_book", book: @book_new %>

<h2>Book detail</h2>
<table>
  <tbody>
    <td><%= image_tag @user.get_profile_image(100, 100) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to "Edit", edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
  </tbody>
</table>