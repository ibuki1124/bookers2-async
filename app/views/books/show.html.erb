<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
    <tbody>
        <tr>
            <td>name</td>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
        </tr>
    </tbody>
</table>
<%= link_to "edit", edit_user_path(@user) %>

<h2>New Book</h2>
<%= form_with model: @book_new do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  
  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>

<h2>Book detail</h2>
<table>
  <tbody>
    <td><%= image_tag @user.get_profile_image(100, 100) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to "Edit", edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
  </tbody>
</table>