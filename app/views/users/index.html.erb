<%= render "layouts/error", error: @book %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-3">
      <%= render "users/user_info", user: @user %>
      <%= render "books/new_book", book: @book %>
    </div>
    
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80, 80) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>