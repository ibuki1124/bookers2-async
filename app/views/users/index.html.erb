<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
    <tbody>
        <tr>
            <td>name</td>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
        </tr>
    </tbody>
</table>
<%= link_to "edit", edit_user_path(@user) %>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  
  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>

<h2>Users</h2>
<table>
  <thead>
    <th>image</th>
    <th>name</th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>