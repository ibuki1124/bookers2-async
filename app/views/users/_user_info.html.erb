<h2>User info</h2>
<%= image_tag user.get_profile_image(100, 100) %>
<table class="table">
    <tbody>
        <tr></tr>
        <tr>
            <td>name</td>
            <td><%= user.name %></td>
        </tr>
        <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
        </tr>
    </tbody>
</table>
<div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-block btn-outline-secondary mt-4" do %>
        <i class="fa-solid fa-user-gear"></i>
    <% end %>
</div>