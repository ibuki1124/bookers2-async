<h2>User info</h2>
<%= render "layouts/error", error: @user %>
<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
    <div>
    <%= f.label "Image" %><br>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction %>
  </div>
  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>