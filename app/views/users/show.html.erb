<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
    <tbody>
        <tr>
            <td>name</td>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
        </tr>
    </tbody>
</table>
<%= link_to "edit", edit_user_path(@user) %>

<%= render "books/new_book", book: @book %>


<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
        <td>
          <%= link_to book_path(book) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>